{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "CommonJS",
    "noImplicitAny": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "esModuleInterop": true
  },
  "include": ["src"], // which files to compile
  "exclude": ["node_modules", "dist"] // which files to skip
}
